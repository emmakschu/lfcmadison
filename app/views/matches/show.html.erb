<!doctype html>
	<head>
		<title>Match | LFC Madison</title>
	</head>

	<h2><%= @match.date.strftime('%a %b %e') %></h2>




<table style="margin-right:auto;margin-left:auto;">

		<tr>
			<td width="200px"><%= image_tag( @match.homeImg, :class=>"centered") %></td>
			<td width="25px"></td>
			<td width="200px"><%= image_tag( @match.awayImg, :class=>"centered") %></td>
		</tr>

		<tr>
			<td><h2><%= @match.home %></h2></td>
			<td><h2>v</h2></td>
			<td><h2><%= @match.away %></td></h2>
		</tr>

		<tr><td colspan="3"><h3><%= @match.score %></h3></td></tr>

		<tr>
			<td><%= @match.homeGoals .html_safe %></td>
			<td></td>
			<td><%= @match.awayGoals .html_safe %></td>
		</tr>

		<tr><td colspan="3"><h4><i><%= @match.competition %></i></h4></td></tr>

		<tr><td colspan="3" class="centered"><i><%= @match.stadium %></i></td></tr>

	</table>


<script>
$('img').css('height', '140px');
</script>
